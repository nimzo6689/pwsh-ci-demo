{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "PowerShell",
      "request": "launch",
      "name": "PowerShell Launch Pester Tests in Temporary Console",
      "script": "Invoke-Pester",
      "cwd": "${workspaceRoot}",
      "createTemporaryIntegratedConsole": true
    },
    {
      "type": "PowerShell",
      "request": "launch",
      "name": "PowerShell Launch Current Pester Test File in Temporary Console",
      "script": "Invoke-Pester",
      "args": ["-Script ${file}"],
      "cwd": "${workspaceRoot}",
      "createTemporaryIntegratedConsole": true
    }
  ]
}
